<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".controlador.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btMostrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="32dp"
            android:text="@string/inicio"
            android:textAllCaps="false"
            android:drawableTop="@drawable/menu_principal_mostrar"/>
        <Button
            android:id="@+id/btRegistrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="32dp"
            android:text="@string/registro"
            android:textAllCaps="false"
            android:drawableTop="@drawable/menu_principal_registrar"/>
        <Button
            android:id="@+id/btActualizar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="32dp"
            android:text="@string/actualizar"
            android:textAllCaps="false"
            android:drawableTop="@drawable/menu_principal_actualizar"/>
    </LinearLayout>

</LinearLayout>